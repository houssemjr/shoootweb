{% extends 'baseback.html.twig' %}
{% block Container %}
    <h1>Joueur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdJoueur</th>
                <td>{{ joueur.idJoueur }}</td>
            </tr>
            <tr>
                <th>NomJoueur</th>
                <td>{{ joueur.nomJoueur }}</td>
            </tr>
            <tr>
                <th>Datenaiss</th>
                <td>{{ joueur.datenaiss ? joueur.datenaiss|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ joueur.age }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ joueur.pays }}</td>
            </tr>
            <tr>
                <th>Drapeau</th>
                <td>{{ joueur.drapeau }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ joueur.image }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
    <script type="text/javascript">
        function imprimer_page(){
            window.print();
        }
</script>
       
<form>
        <input id="impression" class="js-programmatic-set-val btn btn-outline-primary mr-1 mb-1s" name="impression" type="button" onclick="imprimer_page()" value="Print this page" />
    </form>

  {{ include('joueur/_delete_form.html.twig') }}

<a class="btn btn-outline-success"  href="{{ path('app_joueur_edit', {'idJoueur': joueur.idJoueur}) }}">edit</a>


<a class="btn btn-outline-warning" href="{{ path('app_joueur_index') }}">back to list</a>


      </div>
{% endblock %}
