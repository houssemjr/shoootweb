{% extends 'basefront.html.twig' %}

{% block Container %}

    <h1>Equipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdEquipe</th>
                <th>NomEquipe</th>
                <th>Pays</th>
                <th>Drapeau</th>
                <th>Logo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.idEquipe }}</td>
                <td>{{ equipe.nomEquipe }}</td>
                <td>{{ equipe.pays }}</td>
                <td>{{ equipe.drapeau }}</td>
                <td>{{ equipe.logo }}</td>
                <td>
                    <a href="{{ path('app_equipe_front_show', {'idEquipe': equipe.idEquipe}) }}"><i class="fa fa-eye" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
