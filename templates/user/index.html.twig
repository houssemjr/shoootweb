{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

{% if users %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.nom }} {{ app.user.prenom }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    
  <table id="users" class="table table-striped">
    <thead>
      <tr>

        <th>Users</th>
       
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
        <tr>

          <td>{{ user.prenom }} {{ user.nom }}</td>
         
          <td>
            <a href="/user/{{ user.id }}"class="btn btn-dark">Détails</a>

            <a href="/user/edit/{{ user.id }}"class="btn btn-dark">Modifier</a>

            <a href="/user/delete/{{ user.id }}"class="btn btn-danger"onclick="return confirm('Etes-vous sûr de supprimer cet user?');">Supprimer</a>


          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
    <p>Aucun user</p>
{% endif %}
{% endblock %}
