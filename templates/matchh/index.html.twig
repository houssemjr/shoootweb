{% extends 'baseback.html.twig' %}
{% block Container %}

    <h1>Matchh index</h1>
    <input type="text" id="search" class="form-control form-control-no-border mr-sm-2" placeholder="chercher...">
      <br>
      <script src="{{ asset('jquery.min.js') }}"></script>

    <table class="table" id="tableac">
        <thead>
            <tr>
                <th>IdMatch</th>
                <th>IdEquipe1</th>
                <th>IdEquipe2</th>
                <th>Date</th>
                <th>IdComp</th>
                <th>IdStat</th>
                <th>IdProno</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for matchh in matchhs %}
            <tr>
                <td>{{ matchh.idMatch }}</td>
                <td>{{ matchh.idEquipe1 }}</td>
                <td>{{ matchh.idEquipe2 }}</td>
                <td>{{ matchh.date }}</td>
                <td>{{ matchh.idComp }}</td>
                <td>{{ matchh.idStat }}</td>
                <td>{{ matchh.idProno }}</td>
                <td>
                    <a href="{{ path('app_matchh_show', {'idMatch': matchh.idMatch}) }}">show</a>
                    <a href="{{ path('app_matchh_edit', {'idMatch': matchh.idMatch}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_matchh_new') }}">Create new</a>
<script>
    $(document).ready(function(){
        $('#search').keyup(function(){
            search_table($(this).val());
        });
        function search_table(value){
            $('#tableac tbody tr').each(function(){
                var found = 'false';
                $(this).each(function(){
                    if($(this).text().toLowerCase().indexOf(value.toLowerCase()) >= 0)
                    {
                        found = 'true';
                    }
                });
                if(found == 'true')
                {
                    $(this).show();
                }
                else
                {
                    $(this).hide();
                }
            });
        }
    });
</script>

{% do matchhs.setPageRange(3) %}
       {{ knp_pagination_render(matchhs) }}

{% endblock %}
