
{% extends 'home/jou.html.twig' %}
{% block Container %}

{% for message in app.flashes('info') %}
<div class=alert alert-success>
      {{ message }}
</div>

{% endfor %}

 <link rel="stylesheet" href="{{ asset('dist/css/film/style.css') }}">
 
<section class="content">

      <!-- Default box -->
      
      <div class="card card-solid" >
        <div class="card-body pb-0">
         
          <div class="row d-flex align-items-stretch">
           
           
            {% for joueur in joueurs %} 
        
            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
            
         
           
              <div class="card bg-light">
                 
                <div class="card-body pt-0" style="background-color: #010d14">
               
    
    
    
 
        
        <img class="displayed" src = "{{ asset('image/' ~ joueur.image) }}" alt = "">
        
        <div class="blocktext">
          <div class="blocktext">
            <div class="col1">
              <h1>{{ joueur.nomJoueur }}</h1>

              <div class="d-flex justify-content-center">
              <h2 class="blocktext">{{ joueur.nomEquipe }}</h2>
              </div>
              
              <P class="blocktext"> {{ joueur.age }} </P>
              <P class="blocktext"> {{ joueur.datenaiss ? joueur.datenaiss|date('Y-m-d') : '' }} </P>
              <ul class="movie-gen">
                         
                <div class="d-flex justify-content-center">
       
        <img class="displayed" src = "{{ asset('image/' ~ joueur.drapeau) }}" alt = "">
        <P class="blocktext"> {{ joueur.pays }} </P>
        </div>

        
        
        
         
            
                    
              </ul>
            </div>
          </div>
          
          
          

                    
           
          
            
        </div>
        
      </div>
       
          </div>
        
        </div>
        {% endfor %}
      </div>
  </div>
</div>

                </div>
               
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-body -->

        

    
       <div class="d-flex justify-content-between">
       <script type="text/javascript">
        function imprimer_page(){
            window.print();
        }
</script>
    <form>
        <input id="impression" class="js-programmatic-set-val btn btn-outline-primary mr-1 mb-1s" name="impression" type="button" onclick="imprimer_page()" value="Print this page" />
    </form>

    

       {% do joueurs.setPageRange(3) %}
       {{ knp_pagination_render(joueurs) }}

       
      </div>
      
      <!-- /.card -->
</section>


{% endblock %}
