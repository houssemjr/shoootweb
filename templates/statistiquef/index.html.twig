{% extends 'home/jou.html.twig' %}
{% block Container %}
    <h1>Statistique index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idd</th>
                <th>Titrematch</th>
                <th>But</th>
                <th>NButeur</th>
                <th>NPasseur</th>
                <th>NbCorner</th>
                <th>NbFaute</th>
                <th>NbCarton</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for statistique in statistiques %}
            <tr>
                <td>{{ statistique.idd }}</td>
                <td>{{ statistique.titrematch }}</td>
                <td>{{ statistique.but }}</td>
                <td>{{ statistique.nButeur }}</td>
                <td>{{ statistique.nPasseur }}</td>
                <td>{{ statistique.nbCorner }}</td>
                <td>{{ statistique.nbFaute }}</td>
                <td>{{ statistique.nbCarton }}</td>
                <td>{{ statistique.idMatch }}</td>
                <td>
                    <a href="{{ path('app_statistiquef_show', {'idd': statistique.idd}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
