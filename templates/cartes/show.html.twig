{% extends 'baseback.html.twig' %}


{% block Container %}
    <h1>Cartes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carte.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ carte.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ carte.prenom }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ carte.level }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ carte.prix }}</td>
            </tr>
            <tr>
                <th>IdPremuim</th>
                <td>{{ carte.idPremuim }}</td>
            </tr>
            <tr>
                <th>Imgcarte</th>
                <div class="i"><td><img src = "{{ asset('image/' ~ carte.imgcarte) }}" alt = ""></td></div>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cartes_index') }}"><button type="button" class="btn btn-primary mb-2">back</button></a></a>

    <a href="{{ path('app_cartes_edit', {'id': carte.id}) }}"><button type="button" class="btn btn-primary mb-2">Edit</button></a></a>

    {{ include('cartes/_delete_form.html.twig') }}
{% endblock %}
